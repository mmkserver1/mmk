= form_for [@patient, @resource] do |f|
  - if @resource.errors.any?
    #error_explanation
      %ul
        - @resource.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :ecg_file
    %br/
    = f.file_field :ecg_file
  .field
    = f.label :measured_at
    %br/
    = f.text_field :measured_at, :size => 15
  .actions
    = f.submit
