= form_for [@patient, @resource] do |f|
  - if @resource.errors.any?
    #error_explanation
      %ul
        - @resource.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :value
    %br/
    = f.text_field :value, :size => 4
  .field
    = f.label :unit
    %br/
    = f.select :unit, [:kg, :pd]
  .field
    = f.label :measured_at
    %br/
    = f.text_field :measured_at, :size => 15
  .actions
    = f.submit
