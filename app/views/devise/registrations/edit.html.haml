.login_box
  %h2= t(".title")
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
    = devise_error_messages!
    %div= f.label :email
    %div= f.text_field :email
    %div= f.label :last_name
    %div= f.text_field :last_name
    %div= f.label :first_name
    %div= f.text_field :first_name
    %div= f.label :middle_name
    %div= f.text_field :middle_name
    %div= f.label :gender
    %div= f.select :gender, User::GENDERS.map { |g| [I18n.t(g), g] }
    %div= f.label :birthday
    %div= f.date_select :birthday, :start_year => 1918
    %div= f.label :phone
    %div= f.text_field  :phone
    %div
      = f.label :current_password
      %i= t(".current_password_info")
    %div= f.password_field :current_password
    %div= f.submit t(:update)
  %h3= t(".cancel_account")
  %div= link_to t(".cancel_my_account"), registration_path(resource_name), :confirm => t(:confirmation), :method => :delete
