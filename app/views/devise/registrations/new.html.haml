.login_box
  %h2= t(".title")
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    %div= f.label :email
    %div= f.text_field :email
    %div= f.label :last_name
    %div= f.text_field :last_name
    %div= f.label :first_name
    %div= f.text_field :first_name
    %div= f.label :middle_name
    %div= f.text_field :middle_name
    %div= f.label :gender
    %div= f.select :gender, User::GENDERS.map { |g| [I18n.t(g), g] }
    %div= f.label :birthday
    %div= f.date_select :birthday, :start_year=> 1918
    %div= f.label :phone
    %div= f.text_field  :phone
    %div= f.label :password
    %div= f.password_field :password
    %div= f.label :password_confirmation
    %div= f.password_field :password_confirmation
    %div= f.select(:type,[ [t(:patient), :Patient],[t(:doctor), :Doctor]])
    %p= f.submit t(:add)
  = render :partial => "devise/shared/links"
